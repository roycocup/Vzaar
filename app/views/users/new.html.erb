<h1>New User</h1>


<%= form_with scope: :user, url: users_url, local: true do |form| %>
    <div class="form-group">
      <%= form.label :username %><br>
      <%= form.text_field :username, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :password %><br>
      <%= form.text_field :password, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :email %><br>
      <%= form.text_field :email, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :address %><br>
      <%= form.text_area :address, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :phone %><br>
      <%= form.text_field :phone, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.submit("Save", class: 'btn btn-primary') %>
      <%= link_to "Back", users_url, class: 'btn btn-warning' %>
    </div>


<% end %>