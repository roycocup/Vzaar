<h1>Listing Users</h1>

<table class="table table-bordered">
  <tr>
    <th>Id</th>
    <th>Username</th>
    <th>Email</th>
    <th>Created at</th>
    <th>Action</th>
  </tr>

  <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at.strftime("%d-%m-%Y").to_s %></td>
        <td><%= link_to 'Show', user_path(user) %></td>
      </tr>
  <% end %>

</table>

<%=	 link_to "Create", new_user_path, class: "btn btn-primary"   %>